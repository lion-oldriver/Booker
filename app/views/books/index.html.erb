<p class="flash-message"><%= flash[:success] %></p>

<h2 class = "index-top">Books</h2>
<table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan = "3"></th>
   </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show",book_path(book) %></td>
        <td><%= link_to "Edit",edit_book_path(book) %></td>
        <td><%= link_to "Destroy",book_path(book),method: :delete,"data-confirm"=>"Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>New book</h3>
<% if @book.errors.any? %>
 <div class="error-box">
  <h4 class="error-head">
   <% if @book.errors.count == 2 %>
     <%= @book.errors.count %> errors prohibited this book from bgining saved:
   <% end %>
   <% if @book.errors.count == 1 %>
     <%= @book.errors.count %> error prohibited this book from bgining saved:
   <% end %>
  </h4>
  <ul class="error-message">
   <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
  </ul>
 </div>
<% end %>

<%= form_with model:@book,local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field:title %>
 <h4>Body</h4>
 <%= f.text_area:body %>
 <div><%= f.submit"Create Book" %></div>
<% end %>